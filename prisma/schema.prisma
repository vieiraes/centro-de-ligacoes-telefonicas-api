datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Pessoa {
  id            BigInt  @id @default(autoincrement())
  nome          String
  telefone      String  @unique
  email         String? @unique
  status        String  @default("possivel lead")
  classificacao String  @default("interessado")

  atendimentos Atendimentos[]
}

model Atendimentos {
  id            BigInt   @id @default(autoincrement())
  pessoaId      BigInt
  dataLigacao   DateTime @default(now())
  atendente     String
  statusLigacao String
  classificacao String   @default("nao atendeu")

  pessoa Pessoa @relation(fields: [pessoaId], references: [id])

  @@index([pessoaId])
}
